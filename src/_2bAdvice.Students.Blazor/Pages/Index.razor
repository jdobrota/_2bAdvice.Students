@page "/"
@using Volo.Abp.MultiTenancy
@inherits StudentsComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider
@using _2bAdvice.Students.Blazor.Pages.Students

<Fluxor.Blazor.Web.StoreInitializer />

<div class="container">
    <div class="p-5 text-center">
        <Badge Color="Color.Success" class="mb-4">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> Congratulations, <strong>Students</strong> is successfully running!</h5>
        </Badge>

        <h1>@L["ShortWelcomeMessage"]</h1>

        <p class="lead px-lg-5 mx-lg-5">@L["LongWelcomeMessage"]</p>

        @if ( !CurrentUser.IsAuthenticated )
        {
            <a class="btn btn-primary" href="/authentication/login">
                <i class="fa fa-sign-in-alt"></i> @L["Login"]
            </a>
        }
    </div>

    @if (CurrentUser.IsAuthenticated)
    {
        <div class="container">
            <div class="p-5 text-center">
                <h4 class="m1">@L["WelcomeNavigateMessage"]</h4>
            </div>
        </div>
    }
</div>
