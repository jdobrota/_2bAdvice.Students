@using _2bAdvice.Students.Blazor.Pages.Students
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<SchoolModal />

<button type="button" class="btn btn-success my-2" data-bs-toggle="modal" data-bs-target="#SchoolModal" @onclick="() => this.AddSchool()"><span class="bi bi-plus-square" aria-hidden="true"></span>   @L!["AddSchool"]</button>
<table class="table align-middle table-responsive text-center">
    <thead>
        <tr>
            <th>@L!["Name"]</th>
            <th>@L!["Address"]</th>
            <th>@L!["TypeOfSchool"]</th>
            <th>@L!["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @if (!this.Schools.IsNullOrEmpty())
        {
            @foreach (var school in this.Schools!)
            {
                <tr>
                    <td>@school.Name</td>
                    <td>@school.Address</td>
                    <td>@L!["Enum:SchoolType." + (int) school.TypeOfSchool]</td>
                    <td>
                        <button type="button" class="btn btn-warning mx-1" data-bs-toggle="modal" data-bs-target="#SchoolModal" @onclick="() => this.SetSchoolForEdit(school)" title=@L!["ModifySchool"]>
                            <span class="bi bi-pencil" aria-hidden="true"></span>
                        </button>
                        <button type="button" class="btn btn-danger mx-1" @onclick="() => this.DeleteSchool(school)" title=@L!["DeleteSchool"]>
                            <span class="bi bi-trash" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            }
        }
        @if (!this.Schools.IsNullOrEmpty() && !this.Schools!.Any() && !this.IsLoading)
        {
            <tr>
                <td colspan="5">
                    <div class="alert alert-info">
                        <p>@L!["NoData"]</p>
                    </div>
                </td>
            </tr>
        }
        @if (this.IsLoading)
        {
            <tr>
                <td colspan="5">
                    <div class="spinner-border text-success" role="status">
                        <span class="sr-only">@L!["Loading"]</span>
                    </div>
                </td>
            </tr>
        }
        @if (this.IsError)
        {
            <tr>
                <td colspan="5">
                    <div class="alert alert-warning">
                        <p>@L!["Error"]</p>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>