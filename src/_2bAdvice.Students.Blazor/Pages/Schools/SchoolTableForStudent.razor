@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<tr class="collapse" id=schoolTable_@StudentId>
    <td />
    <td colspan="4">
        <table class="table align-middle table-responsive text-center table-light m-0 border border-1 border-success">
            <thead>
                <tr>
                    <th>@L!["Name"]</th>
                    <th>@L!["Address"]</th>
                    <th>@L!["TypeOfSchool"]</th>
                </tr>
            </thead>
            <tbody>
                @if (this.School != null && this.School.Id != Guid.Empty)
                {
                    <tr>
                        <td>@School.Name</td>
                        <td>@School.Address</td>
                        <td>@L!["Enum:SchoolType." + (int) School.TypeOfSchool]</td>
                    </tr>
                }
                @if (this.IsLoading)
                {
                    <tr>
                        <td colspan="3">
                            <div class="spinner-border text-success" role="status">
                                <span class="sr-only">@L!["Loading"]</span>
                            </div>
                        </td>
                    </tr>
                }
                @if (this.IsError)
                {
                    <tr>
                        <td colspan="3">
                            <div class="alert alert-warning">
                                <p>@L!["Error"]</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </td>
</tr>
    
