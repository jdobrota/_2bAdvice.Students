@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<EditForm Model="School" OnValidSubmit="HandleSubmitForm">
    <DataAnnotationsValidator />
    <Microsoft.AspNetCore.Components.Forms.ValidationSummary />
    <div class="modal-header">
        <h1 class="modal-title fs-5" id="addSchoolModalLabel">@(IsEditMode ? "Edit school" : "Add school")</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="form-group mt-2">
            <label for="name">Name</label>
            <InputText class="form-control" @bind-Value="School!.Name" placeholder="School's name" disabled="@IsSubmitting" required />
            <ValidationMessage For="@(() => School!.Name)" />
        </div>
        <div class="form-group mt-2">
            <label for="address">Address</label>
            <InputText class="form-control" @bind-Value="School!.Address" placeholder="School's address" disabled="@IsSubmitting" required />
            <ValidationMessage For="@(() => School!.Address)" />
        </div>
        <div class="form-group mt-2">
            <label for="typeOfSchool">Type of school</label>
            <InputSelect class="form-control" @bind-Value="School!.TypeOfSchool" disabled="@IsSubmitting" required>
                @if (!IsEditMode)
                {
                    <option value="selectType" selected disabled>-- Select Type of school --</option>
                }
                @foreach (var type in Enum.GetValues(typeof(SchoolTypeEnum)))
                {
                    <option value=@type selected="@((SchoolTypeEnum) type == School.TypeOfSchool)">@type</option>
                }
            </InputSelect>
        </div>
    </div>
    <div class="modal-footer pt-2">
        <button type="button" data-bs-dismiss="modal" class="btn btn-secondary" disabled="@IsSubmitting">
            <span class="oi oi-media-skip-backward" aria-hidden="true"></span> Back To List
        </button>
        <button type="submit" data-bs-dismiss="modal" class="btn @(IsEditMode ? "btn-warning" : "btn-success")" disabled="@IsSubmitting">
            <span class="bi @(IsEditMode ? "bi-pencil" : "bi-plus-square")" aria-hidden="true" />
            @(IsEditMode ? "Edit and Close" : "Add and Close")
        </button>
        <button class="btn @(IsEditMode ? "btn-warning" : "btn-success")" type="submit" disabled="@IsSubmitting">
            @if (IsSubmitting)
            {
                <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                <span role="status">Loading...</span>
            }
            else
            {
                <span class="bi @(IsEditMode ? "bi-pencil" : "bi-plus-square")" aria-hidden="true" />
                <span role="status">@(IsEditMode ? "Edit" : "Add")</span>
            }
        </button>
    </div>
</EditForm>